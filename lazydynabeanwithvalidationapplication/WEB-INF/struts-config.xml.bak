<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://struts.apache.org/dtds/struts-config_1_3.dtd">
<struts-config>
<form-beans>
<form-bean type="org.apache.struts.commons.beanutils.DynaLazyBean"  name="loginform"/>
</form-beans>
<action-mappings>
<action path="/login" type="com.pitambar.controler.LoginAction" name="loginform"  validate="true" input="/login.jsp">
<forward name="success" path="/welcome.jsp" />
<forward name="failure"  path="/loginfailed.jsp" />
</action>
</action-mappings>
<message-resources parameter="ApplicationResources" />
<plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property property="pathnames" 
                      value="/WEB-INF/validator-rules.xml, /WEB-INF/validation.xml"/>
  </plug-in>
</struts-config>